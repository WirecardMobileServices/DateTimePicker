<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:paddingBottom="16dp"
    android:layout_width="@dimen/datepicker_component_width"
    android:layout_height="wrap_content"
    android:gravity="center">

    <TextView
        android:id="@+id/date_picker_year"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/datepicker_padding"
        android:layout_marginStart="@dimen/datepicker_padding"
        android:layout_marginTop="@dimen/datepicker_padding"
        android:gravity="center"
        android:textSize="@dimen/datepicker_year_text_size"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="2018" />

    <TextView
        android:id="@+id/date_picker_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/datepicker_selected_day_text_size"
        app:layout_constraintStart_toStartOf="@+id/date_picker_year"
        app:layout_constraintTop_toBottomOf="@+id/date_picker_year"
        tools:text="Thu, Apr 10" />


</android.support.constraint.ConstraintLayout>
